<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="unifiedsearch" name="UnifiedSearch">
	<target name="unifiedsearch" depends="versionhint">
		<delete dir="bin/zip" />
		<delete>
			<fileset dir="bin" includes="smwhalo-search*.zip" />
		</delete>
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/UnifiedSearch/includes">
			<fileset dir="../includes/">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="**/*SKOSExpander*" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/languages">
			<fileset dir="../languages/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/maintenance">
			<fileset dir="../maintenance/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/MWSearch">
			<fileset dir="../MWSearch/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/PathSearch">
			<fileset dir="../PathSearch/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/scripts">
			<fileset dir="../scripts/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/skin">
			<fileset dir="../skin/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/storage">
			<fileset dir="../storage/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/synsets">
			<fileset dir="../synsets/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/UnifiedSearch/">
			<fileset dir="../">
				<include name="COPYING" />
				<include name="INSTALL" />
				<include name="deploy.xml" />
			</fileset>
		</copy>
		<zip destfile="bin/enhancedretrieval.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
		<exec executable="php">
			<arg value="../../../buildtools/renameDeployable.php" />
			<arg value="../deploy.xml" />
			<arg value="bin/enhancedretrieval.zip" />
		</exec>
	</target>
	<target name="versionhint">
		<exec executable="php">
			<arg value="../../../buildtools/replaceVersionHint.php" />
			<arg value="../deploy.xml" />
			<arg value="../includes/UnifiedSearch.php" />
		</exec>
	</target>
</project>
