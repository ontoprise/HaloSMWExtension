<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
    <global>
        <version>142</version>
        <id>SMW</id>
        <vendor>Ontoprise GmbH</vendor>
        <instdir>extensions/SemanticMediaWiki</instdir>
        <description>Enhances the wiki with semantic annotations</description>
        <dependencies>
            <dependency from="1120" to="1169">MW</dependency>
        </dependencies>
    </global>
    <codefiles>
        <file loc="extensions/SMWHalo/deploy.xml" />
    
    </codefiles>
    <wikidumps>
        
    </wikidumps>
    <resources>
    
    </resources>
    <configs>

        <new>
            <require name="smw"
                file="extensions/SemanticMediaWiki/includes/SMW_Settings.php" />
            <function name="enableSemantics">
                <string name="namespace" userValueRequired="true"
                    description="Namespace of wiki (arbitrary value)">
                </string>
            </function>
            <script file="extensions/SemanticMediaWiki/maintenance/SMW_setup.php"/>
            <script file="extensions/SemanticMediaWiki/maintenance/SMW_refreshData.php" params="-v"/>
        </new>
        <uninstall>
            <script file="extensions/SemanticMediaWiki/maintenance/SMW_setup.php" params="--delete"/>
        </uninstall>
    </configs>
</deploydescriptor>